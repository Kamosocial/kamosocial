.error, .error_notification {
  color: red;
  display: block;
}

.error_notification {
  margin-bottom: 10px;
}

#devise-page {
  max-width: 800px;
  margin: 0 auto;
}

#devise-page label {
  display: block;
  margin-top: 20px;
}

#devise-page .hint {
  display: block;
  font-style: italic;
}

#devise-page input[type=text], #devise-page input[type=email], #devise-page input[type=password] {
  width: 300px;
  box-shadow: 0 5px 10px #ccc;
  border-radius: 25px;
  border: none;
  padding: 15px 40px;
  margin: 20px 30px;
  text-align: center;
}

#devise-page .button.delete {
  display: block;
  width: 250px;
  margin: 30px auto;
}

#devise-page .button.delete+.button {
  margin-top: 50px;
}

@media all and (max-width: 500px) {
  #devise-page input[type=email], #devise-page input[type=password] {
    width: 200px;
    margin: 20px 0;
  }
}

#devise-links {
  margin-top: 40px;
}

#devise-links li+li {
  margin-top: 5px;
}

#devise-links a {
  text-decoration: none;
  color: #F4D35E;
  font-weight: bold;
}
