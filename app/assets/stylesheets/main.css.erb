html {
  font-family: 'Open Sans', 'helvetica neue', helvetica, sans-serif;
  color: #aaa;
  letter-spacing: 0.0625em;
  text-align: center;
  height: 100%;
}

body {
  margin: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
}

h1, h2, h3 {
  font-family: 'Raleway', sans-serif;
}

h1 {
  color: #F4D35E;
  margin-top: 60px;
  font-size: 2.5rem;
}

h2 {
  font-size: 2rem;
  color: #F4D35E;
  margin: 60px auto 10px;
}

h3 {
  font-size: 1.6rem;
  color: #F4D35E;
  margin: 100px auto 10px;
}

ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

.flash {
  font-style: italic;
  padding: 30px;
}

.flash i {
  margin-right: 10px;
}

.flash.notice {
  color: #1B998A;
}

.flash.alert {
  color: red;
}

#container {
  flex: 1 0 auto;
}

.signup-button, #signup-button-bottom {
  font-family: 'Raleway', sans-serif;
  font-size: 1.4rem;
  position: relative;
  top: 20px;
  background-color: #1B998A;
  border: none;
  padding: 10px 30px;
  border-radius: 7px;
  color: #F4D35E;
  box-shadow: 0px 5px 14px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  text-decoration: none;
  width: 110px;
}

.signup-button:hover {
  top: 21px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}

#signup-button-bottom {
  position: inherit;
  display: block;
  margin: 80px auto 0;
}

#signup-button-bottom:hover {
  position: relative;
  top: 1px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}

#explanation-section, #places-section p, #signup-section {
  padding: 0 15px;
}

#explanation-container {
  display: flex;
  flex-wrap: wrap;
  height: 200px;
}

#explanation-container div {
  width: 250px;
  height: 100px;
  margin: auto;
}

#explanation-container img {
  max-width: 50px;
}

#new_user p {
  margin: 15px auto;
  max-width: 800px;
}

#places-section #mapid {
  height: 600px;
  width: 100%;
  margin: 45px 0;
  background-color: #73B6E6;
}

#places-section #mapid .map-loading {
  line-height: 600px;
  color: white;
}

#places-section ul {
  padding: 0;
  margin: 30px 0;
}

#places-section li {
  width: 50%;
  margin: 25px auto;
  position: relative
}

#places-section li button {
  background-color: #1B998A;
  border: none;
  padding: 4px 11px 6px 12px;
  margin-left: 15px;
  border-radius: 7px;
  color: #F4D35E;
  box-shadow: 0px 5px 14px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  position: absolute;
  top: -4px;
  right: -54px;
}

#places-section li button:hover {
  top: -3px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}

#added-places .name, .popup-label .name, .popup-label .name a {
  font-size: 1rem;
  font-weight: bold;
  margin-bottom: 5px;
  color: #1B998A;
  text-decoration: none;
}

.popup-label .interests {
  font-size: 0.8rem;
  font-style: italic;
}

.popup-label .address {
  margin: 7px 0 7px;
  font-size: 0.65rem;
}

.popup-label button {
  background-color: #1B998A;
  border: none;
  width: 100%;
  padding: 4px 11px 6px 12px;
  margin-top: 7px;
  border-radius: 7px;
  color: #F4D35E;
  cursor: pointer;
  box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.2);
  position: relative;
}

.popup-label button:hover {
  box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.2);
  top: 1px;
}

#signup-section {
  max-width: 1000px;
  margin: 0 auto;
}

#signup-fields-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 40px;
}

.sign-up-field label {
  font-weight: bold;
}

.sign-up-field span {
  font-size: 0.95rem;
}

.sign-up-field input {
  width: 300px;
  box-shadow: 0 5px 10px #ccc;
  border-radius: 25px;
  border: none;
  padding: 15px 40px;
  margin: 20px 30px;
  text-align: center;
}

input[type=submit] {
  font-family: 'Raleway', sans-serif;
  font-size: 1.4rem;
  font-weight: bold;
  border: none;
  padding: 10px 30px;
  margin-top: 60px;
  border-radius: 7px;
  color: #F4D35E;
  box-shadow: 0px 5px 14px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  background-color: #1B998A;
  position: relative;
}

input[type=submit]:hover {
  top: 1px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}

@media all and (max-width: 500px) {
  html {
    font-size: 0.9rem;
    line-height: 1.4em;
  }

  h3 {
    margin: 60px auto 10px;
  }

  #explanation-section {
    height: 530px;
  }

  #explanation-container div {
    width: 250px;
    height: 150px;
    margin: 10px auto;
  }

  #interests-section {
    padding: 15px 15px;
  }

  #interests-section #interests-list li {
    padding: 10px 15px;
    margin: 8px;
    font-size: 0.8rem;
  }

  .sign-up-field input {
    width: 200px;
    margin: 20px 0;
  }
}
