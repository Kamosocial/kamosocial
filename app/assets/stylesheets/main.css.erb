@font-face {
  font-family: 'indie_flowerregular';
  font-weight: normal;
  src: url(<%= asset_path 'fonts/IndieFlower-webfont.woff' %>) format('woff');
  font-style: normal;
}

html {
  font-family: 'Open Sans', 'helvetica neue', helvetica, sans-serif;
  text-align: center;
}

body {
  margin: 0;
}

h1, h2, h3 {
  font-family: 'indie_flowerregular', sans-serif;
}

h1 {
  font-size: 3rem;
}

h2 {
  font-size: 2rem;
  color: #F4D35E;
  margin: 60px auto 10px;
}

header {
  height: 75px;
  padding: 10px;
}

#login-button {
  font-family: 'indie_flowerregular', sans-serif;
  font-size: 1.4rem;
  position: absolute;
  right: 30px;
  top: 30px;
  background-color: #1B998A;
  border: none;
  padding: 10px 30px;
  border-radius: 7px;
  color: #F4D35E;
  box-shadow: 0px 5px 14px rgba(0, 0, 0, 0.2);
  cursor: pointer;
}

#login-button:hover {
  top: 31px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}

#welcome-section {
  font-family: 'indie_flowerregular', sans-serif;
  font-size: 2.2rem;
  margin-top: -96px;
  padding: 380px 0;
  width: 100%;
  height: 60px;
  background-color: #F4D35E;
  color: #fff;
  text-shadow: 2px 2px 1px #1B998A;
}

#explanation-container {
  display: flex;
  height: 300px;
  color: #aaa;
  letter-spacing: 0.0625em;
}

#explanation-container div {
  width: 250px;
  height: 100px;
  margin: auto;
}

#explanation-container img {
  max-width: 50px;
}

