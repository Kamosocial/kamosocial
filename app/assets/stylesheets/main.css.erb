@font-face {
  font-family: 'indie_flowerregular';
  font-weight: normal;
  src: url(<%= asset_path 'fonts/IndieFlower-webfont.woff' %>) format('woff');
  font-style: normal;
}

html {
  font-family: 'Open Sans', 'helvetica neue', helvetica, sans-serif;
  color: #aaa;
  letter-spacing: 0.0625em;
  text-align: center;
}

body {
  margin: 0;
}

h1, h2, h3 {
  font-family: 'indie_flowerregular', sans-serif;
}

h1 {
  font-size: 3rem;
  color: #1B998A;
}

h2 {
  font-size: 2rem;
  color: #F4D35E;
  margin: 60px auto 10px;
}

h3 {
  font-size: 1.6rem;
  color: #F4D35E;
  margin: 60px auto 10px;
}

header {
  height: 75px;
  padding: 10px;
}

ul {
  list-style-type: none;
}

#login-button {
  font-family: 'indie_flowerregular', sans-serif;
  font-size: 1.4rem;
  position: absolute;
  right: 30px;
  top: 30px;
  background-color: #1B998A;
  border: none;
  padding: 10px 30px;
  border-radius: 7px;
  color: #F4D35E;
  box-shadow: 0px 5px 14px rgba(0, 0, 0, 0.2);
  cursor: pointer;
}

#login-button:hover {
  top: 31px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}

#welcome-section {
  font-family: 'indie_flowerregular', sans-serif;
  font-size: 2.2rem;
  margin-top: -96px;
  padding: 380px 0;
  width: 100%;
  height: 60px;
  color: #1B998A;
  background-color: #F4D35E;
  color: #fff;
  text-shadow: 2px 2px 1px #1B998A;
}

#explanation-container {
  display: flex;
  height: 200px;
}

#explanation-container div {
  width: 250px;
  height: 100px;
  margin: auto;
}

#explanation-container img {
  max-width: 50px;
}

#new_user p {
  margin: 15px auto;
  max-width: 800px;
}

#interests-section #interests-list li {
  display: inline-block;
  padding: 15px 25px;
  margin: 10px;
  font-weight: bold;
  border: 2px solid #1B998A;
  color: #1B998A;
  border-radius: 7px;
  cursor: pointer;
}

#interests-section #interests-list li:hover {
  color: white;
  background-color: #1B998A;
}

#interests-section label {
  display: none;
}

#interests-section input {
  box-shadow: 0 5px 10px #ccc;
  border-radius: 25px;
  max-width: 600px;
  width: 100%;
  border: none;
  padding: 15px 40px;
  text-align: center;
}

#places-section #mapid {
  height: 600px;
  width: 100%;
}

#places-section ul {
  padding: 0;
  margin: 30px 0;
}

#places-section li {
  max-width: 1200px;
  margin: 25px auto;
  position: relative
}

#places-section li button {
  background-color: #1B998A;
  border: none;
  padding: 4px 11px 6px 12px;
  margin-left: 15px;
  border-radius: 7px;
  color: #F4D35E;
  box-shadow: 0px 5px 14px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  position: absolute;
  top: -4px;
  right: -54px;
}

#places-section li button:hover {
  top: -3px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}

#places-section #mapid {
  margin: 45px 0;
}

#added-places .name, .popup-label .name {
  font-size: 1rem;
  font-weight: bold;
  margin-bottom: 5px;
  color: #1B998A;
}

.popup-label .interests {
  font-size: 0.8rem;
  font-style: italic;
}

.popup-label .address {
  margin: 7px 0 7px;
  font-size: 0.65rem;
}

.popup-label button {
  background-color: #1B998A;
  border: none;
  width: 100%;
  padding: 4px 11px 6px 12px;
  margin-top: 7px;
  border-radius: 7px;
  color: #F4D35E;
  cursor: pointer;
  box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.2);
  position: relative;
}

.popup-label button:hover {
  box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.2);
  top: 1px;
}

#signup-section {
  max-width: 1000px;
  margin: 0 auto;
}

#signup-fields-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 40px;
}
.sign-up-field label {
  font-weight: bold;
}

.sign-up-field span {
  font-size: 0.95rem;
}

.sign-up-field input {
  width: 300px;
  box-shadow: 0 5px 10px #ccc;
  border-radius: 25px;
  border: none;
  padding: 15px 40px;
  margin: 20px 30px;
  text-align: center;
}

input[type=submit] {
  font-family: 'indie_flowerregular', sans-serif;
  font-size: 1.4rem;
  font-weight: bold;
  border: none;
  padding: 10px 30px;
  margin-top: 60px;
  border-radius: 7px;
  color: #F4D35E;
  box-shadow: 0px 5px 14px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  background-color: #1B998A;
  position: relative;
}

input[type=submit]:hover {
  top: 1px;
  box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.2);
}
