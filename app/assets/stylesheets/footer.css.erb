#footer {
  margin-top: 80px;
  padding: 40px 20px;
  background-color: #1B998A;
  color: #fff;
  font-size: 0.8rem;
}

#footer a {
  color: #fff;
  text-decoration: none;
}

#footer a:hover {
  text-decoration: underline;
}

#footer ul {
  margin-bottom: 5px;
}

#footer li {
  display: inline;
}

#footer .conditions li+li::before {
  content: "-";
  margin-left: 10px;
  margin-right: 10px;
}

#footer .author li+li::before {
  content: "|";
  margin-left: 10px;
  margin-right: 10px;
}

@media all and (max-width: 500px) {
  #footer li {
    display: inherit;
  }

  #footer .conditions li+li::before, #footer .author li+li::before{
    content: none;
    margin: none
  }
}
