.leaflet-control-geosearch.bar {
  text-align: left;
}

#welcome-section {
  font-family: 'Kalam', sans-serif;
  font-size: 2.2rem;
  margin-top: -125px;
  padding: 380px 0;
  width: 100%;
  height: 60px;
  color: #7CCFBE;
  background-color: #FFDA4B;
  color: #fff;
  text-shadow: 2px 2px 1px #7CCFBE;
  /* Picture credits: Photo by Stanford Smith on Unsplash */
  background-image: linear-gradient(to bottom, rgba(244, 211, 94, 1), rgba(244, 211, 94, 0.5)), url(<%= image_path 'stanford-smith-369293.jpg' %>);
  background-size: cover;
  background-position: bottom;
}

#welcome-section h1 {
  font-size: 2.2rem;
  font-weight: inherit;
  color: white;
  margin: 0 0 40px;
}

.account-deletion-highlight {
  font-size: 1rem;
  position: relative;
  top: 45px;
}

.account-deletion-highlight a {
  color: white;
}

@media all and (max-width: 500px) {
  .leaflet-control-geosearch.bar {
    width: 80%;
    left: 50px;
    margin: 10px;
  }

  #welcome-section {
    padding: 190px 15px 220px;
    width: calc(100% - 30px);
    font-size: 1.5rem;
  }

  #welcome-section h1 {
    font-size: 1.5rem;
    line-height: 1.2em;
    margin-bottom: 20px;
  }
}
