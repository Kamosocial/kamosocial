<% if flash[:notice] %>
  <div class="flash notice"><i class="fa fa-info-circle" aria-hidden="true"></i><%= flash[:notice] %></div>
<% end %>
<% if flash[:alert] %>
  <div class="flash alert"><i class="fa fa-exclamation-circle" aria-hidden="true"></i><%= flash[:alert] %></div>
<% end %>

<p id="preferences-message">
  <% if @interests.empty? || @places.empty? %>
    <%=t 'preferences.message.should_add' %>
  <% else %>
    <%=t 'preferences.message.wait' %>
  <% end %>
</p>

<div id="interests-section">
  <h3><%=t 'preferences.interests.title' %></h3>
  <ul id="interests-list">
    <% @interests.each do |interest| %>
      <li><%= interest.name %></li>
    <% end %>
  </ul>
  <% if @interests.empty? %>
    <%=t 'preferences.interests.empty' %>
  <% end %>
  <%= link_to t("preferences.interests.edit"), preferences_interests_path, class: "button main" %>
</div>

<div id="places-section">
  <h3><%=t 'preferences.places.title' %></h3>
  <ul id="added-places">
    <% @places.each do |place| %>
      <li><span class="name"><%= place.name %></span> <%= place.address %></li>
    <% end %>
  </ul>
  <% if @places.empty? %>
    <%=t 'preferences.places.empty' %>
  <% end %>
  <%= link_to t("preferences.places.edit"), preferences_places_path, class: "button main" %>
</div>

<div id="account-section">
  <h3><%=t 'preferences.account.title' %></h3>
  <%=t 'preferences.account.description' %>
  <%= link_to t("preferences.account.edit"), preferences_account_path, class: "button main" %>
</div>
